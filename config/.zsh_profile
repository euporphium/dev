export TERM=xterm-256color
export XDG_CONFIG_HOME=$HOME/.config
export GIT_EDITOR="nvim"

alias vim="nvim"

addToPath() {
        if [[ "$PATH" != *"$1"* ]]; then
                export PATH=$PATH:$1
        fi
}

addToPathFront() {
        if [[ "$PATH" != *"$1"* ]]; then
                export PATH=$1:$PATH
        fi
}

