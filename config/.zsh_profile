export TERM=xterm-256color
export XDG_CONFIG_HOME=$HOME/.config
export GIT_EDITOR="nvim"

# (Custom) Same as theme but includes hostname
PROMPT='%{$fg_bold[magenta]%}%m%{$reset_color%} %(?:%{$fg_bold[green]%}%1{➜%} :%{$fg_bold[red]%}%1{➜%} )%{$fg[cyan]%}%c%{$reset_color%}'
PROMPT+=' $(git_prompt_info)'

alias vim="nvim"

addToPath() {
        if [[ "$PATH" != *"$1"* ]]; then
                export PATH=$PATH:$1
        fi
}

addToPathFront() {
        if [[ "$PATH" != *"$1"* ]]; then
                export PATH=$1:$PATH
        fi
}

addToPath $HOME/.local/scripts

[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh
